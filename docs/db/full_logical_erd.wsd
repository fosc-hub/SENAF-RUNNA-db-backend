entity T_DECISION {
    + PRIMARY_KEY(id)
    --
    fecha : date, null=False
    hora : time, null=False
    justificacion : text, null=False
    decision : (
        APERTURA DE LEGAJO,
        RECHAZAR CASO
    ) : null=False
    --
    FOREIGN_KEY(T_DEMANDA) : null=False
    --
    TriggerOnInsert(
        CreationOfLegajo(
            dropdown : "Apertura de legajo" || T_SCORE_DEMANDA.score > 10 || T_SCORE_DEMANDA.score_vulneracion > 10 || T_SCORE_DEMANDA.score_evaluacion > 10 || T_SCORE_DEMANDA.score_condiciones_vulnerabilidad > 10 || T_SCORE_DEMANDA.score_motivo_intervencion > 10
            bool : true
        )
        CreationOfMPI_MPE(
            dropdown : "Apertura de legajo"  || T_SCORE_DEMANDA.score > 10 || T_SCORE_DEMANDA.score_vulneracion > 10 || T_SCORE_DEMANDA.score_evaluacion > 10 || T_SCORE_DEMANDA.score_condiciones_vulnerabilidad > 10 || T_SCORE_DEMANDA.score_motivo_intervencion > 10
            bool : true
        )
        RechazarCaso(
            dropdown : "Rechazar el caso"
            bool : true
        )
    )
}

