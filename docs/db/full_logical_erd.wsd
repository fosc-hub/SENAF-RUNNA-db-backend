entity T_DECISION {
    + PRIMARY_KEY(id)
    --
    fecha
    hora
    justificacion = text
    decision = (
        APERTURA DE LEGAJO,
        RECHAZAR CASO
    )
    --
    FOREIGN_KEY(T_DEMANDA)
    --
    TriggerOnInsert(
        CreationOfLegajo(
            dropdown = "Apertura de legajo" || T_DEMANDA.score > 10 || T_DEMANDA.score_vulneracion > 10 || T_DEMANDA.score_evaluacion > 10
            bool = true
        )
        CreationOfMPI_MPE(
            dropdown = "Apertura de legajo"  || T_DEMANDA.score > 10 || T_DEMANDA.score_vulneracion > 10 || T_DEMANDA.score_evaluacion > 10
            bool = true
        )
        RechazarCaso(
            dropdown = "Rechazar el caso"
            bool = true
        )
    )
}

