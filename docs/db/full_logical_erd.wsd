    fecha
    hora
    mail
    mensaje
    --
    FOREIGN_KEY(T_DEMANDA)
    FOREIGN_KEY(T_INSTITUCION_RESPUESTA)
    --
    ServicioDeMailSMTP(
        mail,
        mensaje
        )
}

entity T_DEMANDA_VINCULADA {
    + PRIMARY_KEY(id)
