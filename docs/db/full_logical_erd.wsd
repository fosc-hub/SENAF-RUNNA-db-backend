    + is_staff : default=False
    + is_active : default=True
    + date_joined : default=timezone.now
    + is_superuser : default=False
    + fecha_nacimiento : null=True, blank
    + genero : MASCULINO, FEMENINO, OTRO
    + telefono : null=True, blank
}

CustomUser <|-- T_USER

