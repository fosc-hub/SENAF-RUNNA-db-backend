        VENCIDO,
        EXTRAVIADO,
        INEXISTENTE,
        VALIDO,
        OTRO
    )
    genero = (
        MASCULINO,
        FEMENINO,
        OTRO
    )
    boton_antipanico = bool
    observaciones
    adulto = bool
    nnya = bool
    --
    --
}

